{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "removeComments": true,
    },
    "include": [
        "engine/**/*.ts",
        "logic/**/*.ts",
        "middleware/**/*.ts",
        "tests/**/*.ts",
        "utils/**/*.ts",
        "server.ts"
    ],
    "exclude": [
        ".elasticbeanstalk",
        "dist",
        "node_modules"
    ]
}
